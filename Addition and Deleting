#include<iostream>
using namespace std;

int main(){
	
	int a,b;
	cout<<"Burda girdiginiz iki sayinin toplami ve farki yazilacaktir."<<endl;
	cout<<"Birinci sayiyi giriniz -> ";
	cin>>a;
	cout<<"Ikinci sayiyi giriniz -> ";
	cin>>b;
	cout<<"Iki sayinin toplami -> "<<a+b<<endl;
	cout<<"Iki sayinin farki -> "<<a-b<<endl;
	
	
	
	return 0;
}
